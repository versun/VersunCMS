<%= form_with(model: [:admin,@article]) do |form| %>
  <% if @article.errors.any? %>
    <div style="color: red">
      <h3>
        <%= pluralize(@article.errors.count, "error") %> prohibited this
        article from being saved:
      </h3>

      <ul>
        <% @article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <fieldset class="bordered-container bordered-fieldset">
      <legend>Base</legend>

      <%= form.label :title, "title:" %>
      <%= form.text_field :title %>
      <br>

      <%= form.label :slug, "slug:" %>
      <%= form.text_field :slug %>
      <br>

      <%= form.label :created_at, "created at:" %>
      <%= form.datetime_field :created_at %>
    </fieldset>

    <fieldset class="bordered-container bordered-fieldset">
      <legend>Description</legend>
      <%= form.text_area :description, rows: 3, cols:50 %>
    </fieldset>

    <fieldset class="bordered-container bordered-fieldset">
      <legend>Content</legend>
      <%= form.rich_text_area :content, required: true %>
    </fieldset>

    <fieldset class="bordered-container bordered-fieldset">
      <legend>CrossPost</legend>

      <%# Mastodon %>
      <% mastodon_enabled = Crosspost.find_by(platform: 'mastodon')&.enabled? %>
      <div>
        <%= form.check_box :crosspost_mastodon, disabled: !mastodon_enabled %>
        <%= form.label :crosspost_mastodon, "Post to Mastodon" %>
        <% unless mastodon_enabled %>
          <span style="color: #999; font-size: 0.9em;">(not enabled)</span>
        <% end %>
        <% if mastodon_enabled %>
          <%= form.fields_for :social_media_posts, @article.social_media_posts.find_or_initialize_by(platform: 'mastodon') do |post_form| %>
            <% if post_form.object.platform == 'mastodon' %>
              <%= post_form.text_field :url, placeholder: "Post URL" %>
              <%= post_form.hidden_field :platform, value: "mastodon" %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <%# Twitter %>
      <% twitter_enabled = Crosspost.find_by(platform: 'twitter')&.enabled? %>
      <div>
        <%= form.check_box :crosspost_twitter, disabled: !twitter_enabled %>
        <%= form.label :crosspost_twitter, "Post to Twitter" %>
        <% unless twitter_enabled %>
          <span style="color: #999; font-size: 0.9em;">(not enabled)</span>
        <% end %>
        <% if twitter_enabled %>
          <%= form.fields_for :social_media_posts, @article.social_media_posts.find_or_initialize_by(platform: 'twitter') do |post_form| %>
            <% if post_form.object.platform == 'twitter' %>
              <%= post_form.text_field :url, placeholder: "Post URL" %>
              <%= post_form.hidden_field :platform, value: "twitter" %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <%# Bluesky %>
      <% bluesky_enabled = Crosspost.find_by(platform: 'bluesky')&.enabled? %>
      <div>
        <%= form.check_box :crosspost_bluesky, disabled: !bluesky_enabled %>
        <%= form.label :crosspost_bluesky, "Post to Bluesky" %>
        <% unless bluesky_enabled %>
          <span style="color: #999; font-size: 0.9em;">(not enabled)</span>
        <% end %>
        <% if bluesky_enabled %>
          <%= form.fields_for :social_media_posts, @article.social_media_posts.find_or_initialize_by(platform: 'bluesky') do |post_form| %>
            <% if post_form.object.platform == 'bluesky' %>
              <%= post_form.text_field :url, placeholder: "Post URL" %>
              <%= post_form.hidden_field :platform, value: "bluesky" %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <%= link_to "Go to Cross Post Settings", admin_crossposts_path %>
    </fieldset>

    <fieldset class="bordered-container bordered-fieldset">
      <legend>Newsletter</legend>

      <%# Newsletter %>
      <% newsletter_enabled = Listmonk.first&.enabled? %>
      <div>
        <%= form.check_box :send_newsletter, disabled: !newsletter_enabled %>
        <%= form.label :send_newsletter, "Send Newsletter" %>
        <% unless newsletter_enabled %>
          <span style="color: #999; font-size: 0.9em;">(not enabled)</span>
        <% end %>
      </div>

      <%= link_to "Go to Newsletter Settings", admin_newsletter_path %>
    </fieldset>

    <fieldset class="bordered-container bordered-fieldset">
      <legend>Actions</legend>

      <div>
        <%= form.select :status, Article.statuses.keys, { prompt: 'choose a status', selected: @article.status.presence || 'draft' }, { id: 'status_select', required: true } %>
      </div>

      <div
        class="scheduled-at"
        id="scheduled_at"
        style="display: <%= form.object.schedule? ? 'block' : 'none' %>"
      >
        <%= form.datetime_field :scheduled_at, value: @article.scheduled_at&.in_time_zone %>
        Current Date Time: <%= Time.current.strftime("%Y/%m/%d %I:%M %p %Z") %>
      </div>

      <div>
        <%= form.submit "save" %>
        <% if @article.persisted? %>
          <%= link_to "delete", article_path(@article.slug), method: :delete, data: { turbo_method: :delete,turbo_confirm: "Are you sure?" } %>
        <% end %>
      </div>
    </fieldset>
  </div>
<% end %>

<%= javascript_tag do %>
  function initializeScheduledAt() { const statusSelect =
  document.getElementById('status_select'); const scheduledAtContainer =
  document.getElementById('scheduled_at'); // 初始检查状态 if (statusSelect.value ===
  'schedule') { scheduledAtContainer.style.display = 'block'; } // 添加change事件监听
  statusSelect.addEventListener('change', function() { if (this.value ===
  'schedule') { scheduledAtContainer.style.display = 'block'; } else {
  scheduledAtContainer.style.display = 'none'; } }); } // 同时支持传统加载和Turbo Drive加载
  document.addEventListener("DOMContentLoaded", initializeScheduledAt);
  document.addEventListener("turbo:load", initializeScheduledAt);
<% end %>
