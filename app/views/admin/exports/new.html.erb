<div class="bg-white rounded-lg shadow-md p-6">
  <h3 class="text-2xl font-bold text-gray-800 mb-6">Export Data</h3>
  <div class="flex items-center justify-between">
    <%= form_with url: admin_exports_path, method: :post, local: true, data: { turbo: false } do |f| %>
      <%= f.submit "开始导出", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200" %>
    <% end %>
  </div>

  <% if flash[:alert] %>
    <div class="mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<% render 'admin/shared/activitylog', activity_logs: @activity_logs %>
