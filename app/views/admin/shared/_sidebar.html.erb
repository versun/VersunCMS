<div data-controller="sidebar">
  <!-- Mobile Menu Button -->
  <button 
    type="button" 
    class="mobile-menu-btn"
    data-action="click->sidebar#toggle"
    aria-label="Toggle menu">
    <i class="fas fa-bars"></i>
  </button>

  <!-- Overlay -->
  <div 
    class="sidebar-overlay"
    data-sidebar-target="overlay"
    data-action="click->sidebar#close">
  </div>

  <aside 
    class="admin-sidebar"
    data-sidebar-target="sidebar">
    <div class="sidebar-header">
      <div class="sidebar-header-content">
        <%= link_to "VersunCMS", root_path, class: "sidebar-brand" %>
        <button 
          type="button" 
          class="sidebar-close-btn"
          data-action="click->sidebar#close"
          aria-label="Close menu">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>

  <nav class="sidebar-nav">
    <div class="nav-section">
      <div class="nav-label">Content</div>
      <%= link_to admin_articles_path, class: "nav-link" do %>
        <i class="fa fa-newspaper"></i>
        <span>Posts</span>
      <% end %>
      <%= link_to admin_pages_path, class: "nav-link" do %>
        <i class="fa fa-file"></i>
        <span>Pages</span>
      <% end %>
      <%= link_to admin_tags_path, class: "nav-link" do %>
        <i class="fa fa-tags"></i>
        <span>Tags</span>
      <% end %>
      <%= link_to admin_comments_path, class: "nav-link" do %>
        <i class="fa fa-comments"></i>
        <span>Comments</span>
        <% if pending_comments_count > 0 %>
          <span class="nav-badge"></span>
        <% end %>
      <% end %>
      <%= link_to admin_static_files_path, class: "nav-link" do %>
        <i class="fa fa-folder"></i>
        <span>Static Files</span>
      <% end %>
      <%= link_to admin_redirects_path, class: "nav-link" do %>
        <i class="fa fa-arrow-right"></i>
        <span>Redirects</span>
      <% end %>
    </div>

    <div class="nav-section">
      <div class="nav-label">Settings</div>
      <%= link_to edit_admin_setting_path, class: "nav-link" do %>
        <i class="fa fa-cog"></i>
        <span>Site Settings</span>
      <% end %>
    </div>

    <div class="nav-section">
      <div class="nav-label">Tools</div>
      <%= link_to admin_migrates_path, class: "nav-link" do %>
        <i class="fa fa-exchange"></i>
        <span>Migrate</span>
      <% end %>
      <%= link_to admin_backups_path, class: "nav-link" do %>
        <i class="fa fa-database"></i>
        <span>Backup</span>
      <% end %>
      <%= link_to admin_crossposts_path, class: "nav-link" do %>
        <i class="fa fa-share-nodes"></i>
        <span>Crosspost</span>
      <% end %>
      <%= link_to admin_newsletter_path, class: "nav-link" do %>
        <i class="fa fa-envelope"></i>
        <span>Newsletter</span>
      <% end %>
      <%= link_to admin_jobs_path, class: "nav-link" do %>
        <i class="fa fa-tasks"></i>
        <span>Jobs</span>
      <% end %>
    </div>
  </nav>

  <% if Current.user.present? %>
    <div class="sidebar-footer">
      <%= link_to edit_user_path(Current.user), class: "nav-link" do %>
        <i class="fa fa-user"></i>
        <span>Account</span>
      <% end %>
      <%= link_to admin_activities_path, class: "nav-link" do %>
        <i class="fa fa-history"></i>
        <span>Activity</span>
      <% end %>
      <%= link_to session_path, method: :delete, data: { turbo_method: :delete }, class: "nav-link logout-link" do %>
        <i class="fa fa-sign-out"></i>
        <span>Logout</span>
      <% end %>
    </div>
  <% end %>
  </aside>
</div>
