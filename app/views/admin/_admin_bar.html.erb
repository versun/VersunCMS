<% content_for :head do %>
  <style>
      trix-toolbar {
          position: sticky;
          top: 0;
          z-index: 1;
          background-color: white;
      }
      .status-tab.active {
          background-color: cornflowerblue;
          color: white;
      }
  </style>
<% end %>

<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<table width="100%">
  <tr>
    <td>
      <%= link_to "Posts", admin_posts_path, class: "admin-button" %> |
      <%= link_to "Pages", admin_pages_path, class: "admin-button" %>
    </td>
    <td>
      <%= link_to "Export", tools_export_index_path, class: "admin-button" %> |
      <%= link_to "Import", tools_import_index_path, class: "admin-button" %> |
      <%= link_to "CrossPost", crossposts_path, class: "admin-button" %> |
      <%= link_to "Newsletter", newsletter_path, class: "admin-button" %>
    </td>
    <td>
      <%= link_to "Jobs", admin_jobs_path, class: "admin-button" %> |
      <%= link_to "Settings", edit_setting_path, class: "admin-button" %> |
      <%= link_to "Account", edit_user_path(Current.user), class: "admin-button" %>
    </td>

    <td align="right">
      <%= button_to "Logout", session_path, method: :delete, data: { turbo_method: :delete }, class: "admin-button" %>
    </td>
  </tr>
</table>
<hr>
