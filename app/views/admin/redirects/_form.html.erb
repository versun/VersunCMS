<%= form_with(model: [:admin, redirect]) do |form| %>
  <% if redirect.errors.any? %>
    <div class="form-errors">
      <strong><%= pluralize(redirect.errors.count, "error") %> prohibited this redirect from being saved:</strong>
      <ul>
        <% redirect.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section">
    <h3>Redirect Configuration</h3>

    <div class="field">
      <%= form.label :regex, "Regex Pattern" %>
      <%= form.text_field :regex, placeholder: "^/old-path$" %>
      <small>
        Regular expression to match the URL path. Examples:
        <code>^/old-page$</code> (exact match),
        <code>^/posts/(.+)$</code> (with capture groups)
      </small>
    </div>

    <div class="field">
      <%= form.label :replacement, "Replacement URL" %>
      <%= form.text_field :replacement, placeholder: "/new-path" %>
      <small>
        Target URL or replacement pattern. Use <code>\1</code>, <code>\2</code> etc. to reference capture groups.
        Examples: <code>/new-page</code>, <code>/articles/\1</code>
      </small>
    </div>

    <div class="field checkbox">
      <%= form.check_box :permanent %>
      <%= form.label :permanent, "Permanent Redirect (301)" %>
    </div>
    <small>
      Permanent redirects (301) tell search engines to update their index.
      Temporary redirects (302) are used for short-term changes.
    </small>

    <div class="field checkbox">
      <%= form.check_box :enabled, checked: redirect.new_record? ? true : redirect.enabled %>
      <%= form.label :enabled, "Enabled" %>
    </div>
    <small>Only enabled redirects will be active.</small>
  </div>

  <div class="form-actions">
    <%= form.submit %>
    <%= link_to "Cancel", admin_redirects_path, class: "btn btn-secondary" %>
  </div>
<% end %>
