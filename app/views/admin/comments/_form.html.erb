<%= form_with(model: [:admin, @comment], local: true) do |f| %>
  <div style="margin-bottom: 1rem;">
    <%= f.label :commentable, "Article/Page", style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <p style="margin: 0; padding: 0.5rem; background: #f5f5f5; border-radius: 4px;">
      <% display_commentable = @comment.display_commentable %>
      <% if display_commentable %>
        <% if display_commentable.is_a?(Article) %>
          Article: <%= display_commentable.title %>
        <% elsif display_commentable.is_a?(Page) %>
          Page: <%= display_commentable.title %>
        <% else %>
          <%= display_commentable.title %>
        <% end %>
      <% else %>
        Unknown
      <% end %>
    </p>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= f.label :author_name, "Name *", style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= f.text_field :author_name, required: true, style: "width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= f.label :author_url, "Website (optional)", style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= f.url_field :author_url, style: "width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= f.label :content, "Content *", style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= f.text_area :content, required: true, rows: 5, style: "width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px; resize: vertical;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= f.label :approved, style: "display: inline-block; font-weight: bold;" do %>
      <%= f.check_box :approved, style: "margin-right: 0.5rem;" %>
      Approved
    <% end %>
  </div>

  <div>
    <%= f.submit "Save Comment", style: "padding: 0.75rem 1.5rem; background-color: #333; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem; margin-right: 0.5rem;" %>
    <%= link_to "Cancel", admin_comments_path, style: "padding: 0.75rem 1.5rem; background-color: #999; color: white; border: none; border-radius: 4px; text-decoration: none; font-size: 1rem;" %>
  </div>
<% end %>
