<%= form_with(model: [:admin, tag]) do |form| %>
  <% if tag.errors.any? %>
    <div class="form-errors">
      <strong><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</strong>
      <ul>
        <% tag.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section compact">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, placeholder: "e.g., Ruby on Rails" %>
      <small class="help-text">The slug will be automatically generated from the name.</small>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit "Save" %>
    <% if tag.persisted? %>
      <%= link_to "Delete", admin_tag_path(tag), 
          class: "btn btn-danger",
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <% end %>
    <%= link_to "Cancel", admin_tags_path, class: "btn btn-secondary" %>
  </div>
<% end %>
