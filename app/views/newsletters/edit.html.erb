<h1>Newsletter设置</h1>

<%= form_with(model: @listmonk, url: edit_newsletter_path, method: :patch) do |form| %>
  <% if @listmonk.errors.any? %>
    <div>
      <h2><%= pluralize(@listmonk.errors.count, "error") %> 阻止保存:</h2>
      <ul>
        <% @listmonk.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :url, "Listmonk URL" %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :api_key, "API Key" %>
    <%= form.text_field :api_key %>
  </div>

  <% if @lists.present? %>
    <div>
      <%= form.label :selected_list_id, "选择列表" %>
      <%= form.select :selected_list_id, @lists.map { |l| [l["name"], l["id"]] }, include_blank: "请选择列表" %>
    </div>

    <h2>可用列表</h2>
    <ul>
      <% @lists.each do |list| %>
        <li>
          <%= list["name"] %>
          (<%= list["id"] %>)
          <% if @listmonk.selected_list_id == list["id"] %>
            [当前选择]
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.submit "保存" %>
  </div>
<% end %>
