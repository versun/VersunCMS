<div class="comment-form" style="margin-top: 2rem; padding: 1.5rem; border: 1px solid #ddd; border-radius: 4px;">
  <h3 style="margin-top: 0;">Leave a Comment</h3>
  
  <%= form_with(model: comment, url: comments_path(article_id: @article.slug), local: true) do |f| %>
    <div style="margin-bottom: 1rem;">
      <%= f.label :author_name, "Name *", style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
      <%= f.text_field :author_name, required: true, style: "width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= f.label :author_url, "Website (optional)", style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
      <%= f.url_field :author_url, placeholder: "https://your-website.com", style: "width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= f.label :content, "Comment *", style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
      <%= f.text_area :content, required: true, rows: 5, style: "width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px; resize: vertical;" %>
    </div>

    <div>
      <%= f.submit "Submit Comment", style: "padding: 0.75rem 1.5rem; background-color: #333; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem;" %>
    </div>
    
    <p style="margin-top: 1rem; font-size: 0.9rem; color: #666;">
      Your comment will be reviewed before being published.
    </p>
  <% end %>
</div>
