<% content_for :title do %>
  Tags | <%= site_settings[:title] %>
<% end %>

<div style="max-width: 800px; margin: 0 auto; padding: 2rem 1rem;">
  <h2>All Tags</h2>
  <p style="color: #666; margin-bottom: 2rem;">Browse articles by tag</p>

  <% if @tags.any? %>
    <div style="display: flex; flex-wrap: wrap; gap: 1rem;">
      <% @tags.each do |tag| %>
        <a href="/tags/<%= tag.slug %>.html" style="text-decoration: none;">
          <div style="display: inline-block; padding: 0.75rem 1.5rem; background-color: #f5f5f5; border-radius: 8px; transition: all 0.2s; border: 1px solid #e0e0e0;">
            <div style="font-weight: 600; color: #333; margin-bottom: 0.25rem;">
              <%= tag.name %>
            </div>
            <div style="font-size: 0.85rem; color: #666;">
              <%= tag.articles.published.count %> <%= tag.articles.published.count == 1 ? 'article' : 'articles' %>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  <% else %>
    <p style="color: #999;">No tags found.</p>
  <% end %>
</div>

