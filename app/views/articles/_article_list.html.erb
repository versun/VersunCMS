<div class="article-list">
  <% articles.each do |article|%>
    <%= render "articles/article_meta", article:article %>
    <% if article.description.present? %>
      <%= article.description %>
    <% else %>
      <%= article.content %>
    <% end %>
  <% end %>
</div>

<%= render "components/pagination", 
    page: @page, 
    per_page: @per_page, 
    total_count: @total_count
    %>
