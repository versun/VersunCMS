<div class="post-meta">
  <% if article.tags.any? %>
    <span class="post-tags">
      <% article.tags.each do |tag| %>
        <%= link_to "##{tag.name}", tag_path(tag.slug), class: "tag" %>
      <% end %>
    </span>
  <% end %>
  <span class="post-date">
    <time datetime="<%= article.created_at.to_date %>">
      <%= article.created_at.strftime("%Y-%m-%d") %>
    </time>
  </span>
</div>