<%= @article.title %>

<% if @article.description.present? %>
<%= @article.description %>

<% end %>
<% if @article.html? %>
<%= ActionView::Base.full_sanitizer.sanitize(@article.html_content || "") %>
<% else %>
<%= ActionView::Base.full_sanitizer.sanitize(@article.content.to_s) %>
<% end %>

