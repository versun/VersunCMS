<div class="setup-container">
  <div class="setup-header">
    <h1>Welcome to VersunCMS Setup</h1>
    <p>Let's get your blog up and running! Complete the following steps to finish the installation.</p>
  </div>

  <%= form_with url: setup_path, method: :post, class: "setup-form", data: { turbo: false } do |form| %>
    <!-- Display errors if any -->
    <% if @user.errors.any? || @setting.errors.any? %>
      <div class="form-errors">
        <strong>Please fix the following errors:</strong>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          <% @setting.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Admin User Section -->
    <div class="form-section">
      <h2>1. Create Admin User</h2>
      <p class="section-description">This will be your login credentials to access the admin panel.</p>

      <%= fields_for :user, @user do |user_form| %>
        <div class="field">
          <%= user_form.label :user_name, "Username" %>
          <%= user_form.text_field :user_name, required: true, autofocus: true, autocomplete: "username", placeholder: "admin" %>
        </div>

        <div class="field">
          <%= user_form.label :password %>
          <%= user_form.password_field :password, required: true, placeholder: "Enter a secure password", maxlength: 72, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= user_form.label :password_confirmation, "Confirm Password" %>
          <%= user_form.password_field :password_confirmation, required: true, placeholder: "Re-enter your password", maxlength: 72, autocomplete: "new-password" %>
        </div>
      <% end %>
    </div>

    <!-- Site Settings Section -->
    <div class="form-section">
      <h2>2. Configure Site Information</h2>
      <p class="section-description">Basic information about your blog.</p>

      <%= fields_for :setting, @setting do |setting_form| %>
        <div class="field">
          <%= setting_form.label :title, "Site Title" %>
          <%= setting_form.text_field :title, required: true, placeholder: "My Awesome Blog" %>
          <small>The name of your blog</small>
        </div>

        <div class="field">
          <%= setting_form.label :description, "Site Description" %>
          <%= setting_form.text_field :description, placeholder: "A blog about technology, life, and everything in between" %>
          <small>A brief description of your blog (used in SEO)</small>
        </div>

        <div class="field">
          <%= setting_form.label :author %>
          <%= setting_form.text_field :author, placeholder: "Your Name" %>
          <small>Your name as the blog author</small>
        </div>

        <div class="field">
          <%= setting_form.label :url, "Site URL" %>
          <%= setting_form.text_field :url, placeholder: "https://yourblog.com", type: "url" %>
          <small>The full URL where your blog will be accessible</small>
        </div>

        <div class="field">
          <%= setting_form.label :time_zone, "Timezone" %>
          <%= setting_form.select :time_zone, 
                                  timezone_options,
                                  { selected: @setting.time_zone || "UTC" } %>
          <small>Your local timezone for scheduling posts</small>
        </div>
      <% end %>
    </div>

    <!-- Submit Section -->
    <div class="form-actions">
      <%= form.submit "Complete Setup", class: "btn-primary" %>
    </div>
  <% end %>
</div>

<style>
